---
import Layout from "@layouts/LayoutMinimal.astro";
import { Image } from "astro:assets";
import { Icon } from 'astro-icon/components'
import logo from "@assets/images/huddle/logo.svg";
import mock from "@assets/images/huddle/illustration-mockups.svg";
import bgdesktop from "@assets/images/huddle/bg-desktop.svg";
import bgmobile from "@assets/images/huddle/bg-mobile.svg";
---

<Layout title="Welcome to Astro.">
  <div class="wrapper">
    <header>
      <Image src={logo} alt="Logo" />
    </header>
    <main>
      <Image src={mock} alt="Mock" />

      <!-- <img src="src/assets/images/huddle/bg-desktop.svg" alt="Mock" /> -->
      <div>
        <h1>Build The Community Your Fans Will Love</h1>
        <p>
          Huddle re-imagines the way we build communities. You have a voice, but
          so does your audience. Create connections with your users as you
          engage in genuine discussion.
        </p>
        <button>Register</button>
      </div>
    </main>
    <footer>
      <ul>
        <li><a href="#"><Icon name="mdi:facebook" /></a></li>
        <li><a href="#"><Icon name="mdi:twitter" /></a></li>
        <li><a href="#"><Icon name="mdi:instagram" /></a></li>
      </ul>
      <p class="attribution">
        Challenge by <a
          href="https://www.frontendmentor.io?ref=challenge"
          target="_blank">Frontend Mentor</a
        >. Coded by <a href="#">Your Name Here</a>.
      </p>
    </footer>
  </div>
</Layout>
<style lang="scss">
  @import url("https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@400;600&display=swap");
  :root {
    --clr-primary: hsl(257, 40%, 49%);
    --clr-secondary: hsl(300, 69%, 71%);
    --padding-sm: clamp(1rem, 3%, 1.5rem);
    --padding-md: clamp(1.5rem, 6%, 3rem);
    --padding-lg: clamp(3rem, 12%, 6rem);
  }

  body {
    background: var(--clr-primary);
    background-image: url("/images/huddle/bg-mobile.svg");
    color: white;
    font-family: "Open Sans", sans-serif;
    font-weight: 400;
    line-height: 1.65;
  }
  main {
    display: grid;
    grid-template-columns: 1fr;
    text-align: center;
    gap: 2ch;

    p {
      max-width: 53ch;
    }
  }
  button {
    display: inline-blockk;
    background: white;
    border: none;
    border-radius: 100vh;
    padding: 0.75rem 3rem;
    margin-block-start: var(--padding-sm);
    cursor: pointer;
    box-shadow: 5px 5px 10px -5px rgba(0, 0, 0, 0.49);
    transition: all 0.5s;
    &:hover {
      color: white;
      background: var(--clr-secondary);
    }
  }

  .wrapper {
    max-width: 300px;

    margin-inline: auto;
    margin-block-start: var(--padding-md);
  }
  h1 {
    font-family: "Poppins", sans-serif;
    font-weight: 600;
    line-height: 1.6;
    font-size: 1.5rem;
    margin-block-end: var(--padding-sm);
  }
  header {
    margin-block-end: var(--padding-lg);
    img {
      max-width: 200px;
    }
  }

  footer ul {
    display: flex;
    justify-content: center;
    gap: 1rem;

    li {
      display: inline-block;
      height: 2.5rem;
      width: 2.5rem;
      border: 1px solid white;
      border-radius: 100vh;
      padding: 0.5rem;
      transition: all 0.5s;

      &:hover {
        border-color: var(--clr-secondary);
        color: var(--clr-secondary);
      }
    }
  }
  @media (min-width: 475px) {
    body {
      background-image: url("/images/huddle/bg-desktop.svg");
    }
    main {
      grid-template-columns: 1.1fr 1fr;
      text-align: left;
    }
    .wrapper {
      max-width: 1280px;
    }
    h1 {
      max-width: 20ch;
      font-size: 2.5rem;
    }
    footer ul {
      justify-content: flex-end;
    }
  }
</style>
